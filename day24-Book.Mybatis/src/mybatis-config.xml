<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
  
  <configuration>
  <!-- DB 접속 정보 변수 선언 -->
    <properties>
        <property name="url" value="jdbc:oracle:thin:@//127.0.0.1:1521/XE"/>
        <property name="driver" value="oracle.jdbc.OracleDriver"/>
        <property name="user" value="SCOTT"/>
        <property name="password" value="TIGER"/>
        <property name="password2" value="0000"/>
    </properties>
    
    <!-- 사용자 정의 타입: 클래스 등록 -->
    <typeAliases>
        <typeAlias type="book.vo.Book" alias="Book"/>
        <typeAlias type="book.vo.Price" alias= "Price"/>
    </typeAliases>
    
    <!-- DB 접속 환경 설정 -->
    <environments default="oracleXE">
        <environment id="oracleXE">
            <transactionManager type="JDBC"/>
            <dataSource type="POLLED">
            <property name="url" value="${url})"/>
            <property name="username" value="${user}"/>
            <property name="password" value="${password}"/>
            <property name="password2" value="${password2}"/>
            </dataSource>
        </environment>
        <environment id="mysql">
            <transactionManager type="JDBC">
            
            </transactionManager>
        </environment>    
    </environments>
    
    <!-- SQL 쿼리가 따로 저장되는 파일을 등록 -->
   <mappers>
    <mapper resource="book.mapper/Book/Mapffer.xml">
   </mappers>
   
   
   
   
   
   
  
  
  