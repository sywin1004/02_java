<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <!-- 출력 대상을 결정 -->
  <Appenders>
    <!-- 콘솔 출력 -->
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
    
    <!-- 파일 출력 -->
  </Appenders>
  
  <!-- 어떤 매퍼파일을 추적할 것인가를 결정 -->
  <Loggers>
    <!-- 로거의 name 속성에는 매퍼xml 의 네임스페이스를 쓴다. -->
    <!-- 로그의 레벨 속성에는 로깅의 강도를 쓴다.
         ERROR, DEBUG, INFO, TRACE 네 가지의 로길 레벨이 존재
         
        DEBUG : 일반적인 개발시 쿼리 실행 로깅을 하기 위해서 사용
        TRACE : DQL 실행시 발생하는 결과셋을 로깅하기 위해서는 사용
        INFO  : 실행중 정보성 출력이 필요한 경우 사용 -->
    <Logger name="mybatis.emp.mapper.EmpMapper" level="trace" additivity="false">
      <!-- Console 혹은 File 엘리먼트의 name 속성 값이
           ref 속성 값으로 등장 -->
      <AppenderRef ref="Console"/>
    </Logger>
    
    <!-- Root 로거 설정은 전체 로거의 설정에 영향을 미침 -->
    <Root level="debug">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>